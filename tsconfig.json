{
	"compilerOptions": {
		"baseUrl": "./src/index.ts",
		"lib": [
			"dom",
			"ES2015"
		],
		"outDir": "lib",
		"target": "ES2015",
		"module": "es2015",
		"moduleResolution": "node",
		"declaration": true,
		"noEmit": false,
		"noImplicitAny": true,
		"strict": true,
		"typeRoots": [
			"./node_modules/@types",
		],
		"paths": {}
	},
	"exclude": [
		"./node_modules/*",
		"./dist/*",
		"./examples/*"
	]
}